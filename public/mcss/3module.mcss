@abstract '_config.mcss';
/* 导航 */
.m-nav{
    $height = 32px;margin-top:-11px;
    background:#fff;
    li{
      position:relative;
      a,.text{display: block;padding-left:60px;height:$height;line-height:$height;}
      a{color:#666;}
      &.itm{margin-top:10px;}
      &.group{padding-top:10px;margin-top:10px; border-top:1px dashed #eee;color:#999;}
      .u-ticon{$inline-block();color:#444;font-size:16px;width:22px;text-align: center; margin-left:-32px;margin-right:10px;vertical-align: middle;}
      a:hover{background:#f2f2f2;}
      &.z-cur{background:#f2f2f2;}
      &.z-cur:before{content: '';position: absolute;left:0;width:10px;height:$height;background-color:#85bdaa;}
      &.z-cur a:hover{cursor: default;}
      &.z-cur .u-ticon:before{color:$bg1;}
      &.itm:nth-last-child(2){border-top:1px dashed #eee;padding-top:10px;}
    }
}
/* 二级导航 */
.m-nav1{
    $height = 40px;
    overflow:hidden;border-top-left-radius:5px;
  li{
    position:relative;height:$height;line-height:$height;border-style:solid;border-width:0 0 1px 0;border-color:$bg8;background-color: #f8f8f8;
    a{
      display:block;padding-left:35px;
      .opts{
        display:none;position:absolute;right:10px;top:50%;margin-top:-5px;
        i{float:left;margin-left:10px;}
      }
      &:hover{
        background:#e8e8e8;
        border-color:#e8e8e8;
        .opts{display:block;}
      }
    }
    &.z-cur{z-index:2;border-color:#ddd;}
    &.z-cur a, &.z-cur a:hover{background:#fff;}
  }
  ul:first-child{}
  .optbar{
    padding:20px;background: #f8f8f8;
  }
}
.m-subnav{
  ul{float:left;}
  li{ 
    position:relative;float:left;
    $bgcolor = #fbfbfb;
    a{
      float:left;padding:0 20px;text-align: center;background:#fff;color:#666; border-bottom:4px solid #fff;
      &:hover{background:$bgcolor;border-color:$bgcolor;}
    }
    &.z-cur a{
      position:relative;background:$bgcolor;
      border-color:#7cafdb;
      &:hover{cursor:default;}
    }
  }
  .tip{
    float:right;font-size:12px;color: #999;
  }
}

/* 常用操作 */
.m-quickbtn{
  padding:20px;color:#999;
  .tlt{padding:10px 0;border-bottom:1px solid #ddd;}
  .btns{
    padding:10px 0;
    .u-btn{
      margin:10px 0 0;display: block;padding:0 10px;
      & *{vertical-align: middle;}
      .u-ticon{font-size:16px;margin-right:10px;}
    }
  }
}
/* 联系我们 */
.m-contact{
  position: absolute;bottom:20px; padding:20px;line-height: 20px;color:#999;
  .tlt{padding:10px 0;border-bottom:1px solid #ddd;}
  .wrap{padding:20px 0;font-size:12px;}
  a{color:#999;}
  a:hover{color:$bluelink;}
}
/* logo */
.m-logo{
  float: left;
  a,.lg{display: block;width:240px;height: 68px;text-indent:-9999px;overflow: hidden;border-right:1px solid $bg1; @extend logo;}
  &.easy{
    a,.lg{@extend logo-s;border: 0;width: 290px;border-left: 0px;background-position: 20px 14px;}
  }
}
/* 底部版权 */
.m-ft{
    width:960px;margin:0 auto;text-align:center;line-height:20px; color:$fc1;font-size:$fs0;$clearfix();
    .link{
        float:left;
        i{margin:0 10px;color:#cecece;font-family: simsun;}
    }
    .rights{float:right;}
    a{
        color:$fc2;
        &:hover{text-decoration:underline;}
    }
}
/* 帐号 */
.m-account{ 
  width:179px;height:68px;position: absolute;right:0;top:0;z-index:100; border-left: 1px solid #f2f2f2;
  /* easy模式，部分页头的帐号需要显示用户邮箱，例如资料完善页面 */
  &.easy{width: auto;border-left: 0px}
  /* easy模式，显示的邮箱样式 */
  .email{margin-right: 10px; line-height: 50px;}
  .wrap{
      display: block;padding:9px 20px;height:50px;position: relative;
      a{color:#999;}
      /* 新消息通知圆点 */
      .newnt{position: absolute; left: 37px; top: 20px; font-size: 12px;color: #f45300;}
      .newnt:hover{color: #f45300;}
  }
  .nick{
    margin:0 15px;$inline-block();
  }
  .avatar{width:50px;height:50px;$border-radius:50%;}
  .reg {
    display: block;height:68px;line-height:60px;background:#fff;
    a{margin-left:5px;}
  }
  .u-ticon{
    position: relative;font-size:18px;
    &:hover{color:#4a4a4a;}
    &.z-hasnew:after{
      content:'\f172';position: absolute;font-size:12px;color:red;top:2px;right:-5px;
    }
  }
  .logout{
    font-size:12px;
    &:hover{color:#4a4a4a;}
  }
}


/* 栏目标题 */
.m-hd{
  font-size:$fs2;
  .sep{margin:0 10px;color:#ddd;font-size:40px;font-family:$ff2;vertical-align:middle;}
  .subcontent{margin-top:10px;font-size:$fs1;}
  .m-search{float:right;}
  h1{
    color:#999;
    a:hover{text-decoration:underline;};
  }
  .btn{margin-top:15px;}
  .tip{font-size:12px;color:#999;}
}
.m-hd-1,.m-hd-2, .m-hd-3{
    border-color:#bab09e;font-size:$fs2;background:#fcf8e3;
    .close{float:right;font:bold $fs2/21px $ff2;cursor:pointer;}
}
.m-hd-2{
  height: auto;line-height: 23px;font-size:14px;
}
.m-hd-3{
  h1{
    font-size: 20px;
    margin-bottom: 14px;
    color: #666;
  }
  ul{
    p{font-size: 14px; }
    li{
      $txt-ellipsis();
      list-style: disc;
      list-style-position: inside;
      color: #666;
    }
  }
  height: auto;
}
.m-hd-at{height:auto;min-height:21px;}
/* 绿色 */
.m-hd-g{
  border-color:#acc7c5;background:#d1f2eb;
}
.m-hd-msg{
    position:absolute;top:0;left:0;display:none;
    &.z-show{display:block;$animation:opacityshow 0.3s;}
}
/* 模块标题 */
.m-hd2{
    @extend clearfix;margin:0 0 13px;line-height:26px;
    h2{float:left;}
    .m-page{float:right;margin:2px 0 0;}
}
/* 搜索表单 */
.m-search{
    display:block;position:relative;
    margin-top: -12px;
    @extend clearfix;
    select,input{float:left;border:1px solid #ccc;}
    select{margin-right:-1px;background:#f5f5f5;}
    input{width:170px;padding:12px 55px 12px 10px;$box-sizing:content-box;font:$fs0/16px $ff0;color:$fc1;background:#f7f7f7;border:none;line-height: 1.3;height: 16px;}
    button{position:absolute;top:0;right:0;border:0;width:45px;height:40px;cursor:pointer;@extend icon;background:none;background-color: #bdc2ca;color: #fff;}
    .z-placeholder-parent{position:relative;display:block;}
    .z-placeholder{font:$fs0/16px $ff0;padding:12px 55px 12px 10px;}
}
/* 分列式列表基类，列表项具体内容由扩展类各自实现 */
.m-list{
    $color1 = #ccc;
    /* 分列 */
    .col{position:relative;float:right;padding:0 10px;min-height:10px;}/* 默认右浮动，注意结构顺序相反 */
    .col-lt{float:left;}/* 位于自适应列左侧的列 */
    .col-at{float:none;overflow:hidden;}/* 自适应列，结构放在最后 */
    .col-w1{width:100px;}/* 适用于带选择的用户头像 */
    .col-w2{width:55px;}/* 适用于单个操作 */
    .col-w3{width:175px;}/* 适用于很长时间、备注名 */
    .col-w4{width:80px;}/* 适用于时间、状态or略大的操作 */
    .col-w5{width:110px;}/* 适用于较多操作 */
    .col-w6{width:90px;}/* 适用于较长时间 */
    .col-w7{width:75px;}/* 适用于头像*/
    .col-w8{width:150px;}/* 适用于分组 */
    .col-w9{width:220px;}/* 适用于较长的备注 */
    .col-w10{width:30px;}/* 适用于极小列 */
    .col-w11{width: 160px;}
    .col-w12{width:120px;}
    /* 列表表头 */
    .head{
        overflow:hidden;border-top:1px solid $color1;margin:0 0 10px;
        .headwrap{margin-left:-1px;}
        .col{padding-top:10px;}
        .col:before{position:absolute;top:0;left:0;width:1px;height:9px;content:"";background:$color1;}
    }
    /* 列表内容 */
    .list{
        line-height:1.8;
        /* 列表项 */
        .item{
            position:relative;
            @extend clearfix;padding:20px 0;border-top:1px solid $bd0;
            &:first-child{border-top:0;}
            &:hover{z-index:4;background:#f8f8f8;}
            &.z-hover{z-index:5;}
        }
        .item-1{padding:15px 0;}
        .u-ticon{
          color:#999;font-size:18px;margin-right:10px;
          &:hover{color:#333;}
        }
    }
}
/* 用户列表 */
.m-list-contact{
    .name,.remark{$break-word();}
    .col-lt{z-index:2;}
    .user{
        position:relative;z-index:2;padding-left:32px;
        input[type=checkbox]{position:absolute;top:50%;left:0;margin-top:-6px;}
    }
    .remark,.uid{font-size:$fs0;}
    .oitem{
        float:left;margin-left:8px;
        &:first-child{margin-left:0;}
    }
}
/* 消息列表 */
.m-list-msg{
    li:hover .oprate{display:block;}
    li.self:hover{z-index:3;background:none;}
    li.self:hover .oprate{display:none;}
    .col-w1 .user{
      position:relative;z-index:2;padding-left:32px;
      input[type=checkbox]{position:absolute;top:50%;left:0;margin-top:-6px;}
    }
    .col-w1 .user.single{
      padding-left:0;
    }
    .col-lt{z-index:2;}
    .wrap{@extend clearfix;}
    .name{margin:0 0 5px;$break-word();}
    .time{font-size:$fs0;color:$fc1;}
    .cnt{font-size:$fs0;line-height:1.5;$break-word();}
    .user{position:relative;z-index:2;}
    .oprate{display:none;}
    .oitem{
        float:right;margin-right:5px;
        &:first-child{margin-right:0;}
    }
    .reply{
        position:relative;
        overflow:hidden;
    }
    .replycnt{
        margin-top:-150px;
        opacity:0;
        height:130px;
        padding: 10px;
        background-color: #f7f7f7;
        word-wrap: break-word;
        word-break:break-all;
        h5{margin:0 0 5px;}
        $transition:0.5s;
        .btnarea{padding-top:5px;text-align:right;}
        .u-btn{margin-right:15px;}
        .close{
          position: relative;  
          display: inline-block;  
          padding: 0 40px;  
          height: 32px;   
          line-height: 32px;
          border-radius: 3px;  
          text-decoration: none;
          text-align: center;
          vertical-align: middle;
          cursor: pointer;  
          border: 1px solid #d8d8d8;
          color:#000;
      }
    }
    .reply-show{
        .replycnt{margin-top: 20px;opacity:1;}
    }
    .u-video .play .player-area{width:340px;height:246px;}
}
/* 独立操作栏 */
.m-bar{
    @extend clearfix;margin-bottom:40px;padding:10px;border:1px solid $bd0;font-size:$fs0;line-height:26px;background:$bg5;
    input,select{vertical-align:middle;}
    .selall{
        margin-right:20px;
        input{margin:-2px 10px 0 0;}
    }
    .groups{
        label{margin-right:5px;}
        select{margin-right: 5px;}
    }
    .u-date{
      position:relative;
      display:inline-block;
    }
    .refresh{float:right;}
}
/* 分页 */
div.m-page{
    line-height: 22px;
    $width  = 20px;
    $height = 20px;
    $color0 = #ddd;
    $color1 = #78d0c2;
    $color2 = #969696;
    $color3 = #fff;
    $color4 = #999;
    $color5 = #666;
    $color6 = #576b6c;
  margin:20px 0;text-align:right;line-height:$height;font-size:0;word-wrap:normal;white-space:nowrap;font-family:$ff0;color:$color4;
  a{letter-spacing:-0.307em}
  span + a{
    border-left:1px solid #ddd;
  }
  .zdot{width:$width;height:$height;line-height: 16px;text-align: center;border-top: 1px solid $color0;border-bottom: 1px solid $color0;}
  a,.zdot{position:relative;$inline-block();margin:0;font-size:$fs0;letter-spacing:normal;vertical-align:middle;}
  a{
      border:1px solid $color0;color:$color4;border-left:none;text-align: center;padding: 0px;width:21px;height:$height;line-height: $height;
      &:hover{color:$color5;}
      &.js-selected,&.js-selected:hover{cursor:default;color:$color3;background:$color1;border-color: $color1; }
      &.zbtn{
            font-family:$ff2;color:$color4;background:$color0;
            &:hover{background:#aaa;border-color: #aaa;color: #fff;}
        }
        &.zbtn.js-disabled,&.zbtn.js-disabled:hover{cursor:default;color:$color4;border-color:$color0;background:#fff;}
        &.zbtn.zprv{border-left:1px solid $color0;}
    }
    > div{$animation:opacityshow 0.5s;}
  .search{
    display: inline-block;
    margin-left: 20px;
    .u-ipt{
      display: inline-block;
      width: 26px;
      margin: 0 4px;
      padding: 4px 4px;
      vertical-align: middle;
      height: 12px;
      font-size: 12px;
      text-align: center
    }
  }
}
/* 图文分布 */
.m-twgrid{
  margin-left: -20px;
  .gditm{
    float: left;width: 33.333%;
    .tw-wrap{margin-left:20px;}
  }
}

/* m-tw 图文 */
.m-tw{
  line-height: 1.4;border: 1px solid $bd0;background:#fff;
  .cnt{
    display: block; padding:8px 20px 15px;position: relative;z-index:100;
    .z-sel{display: none;}
    .title{
      padding:5px 0; font-size:16px;color: #222;font-weight:bold;letter-spacing: 1px;$break-word();
      max-height:52px;line-height:26px; overflow: hidden;
    }
    .subtitle{$break-word();}
    .date{font-size: 12px;color:$fc1;}
    .abstract{
      color:$fc1;$break-word();max-height: 58px;overflow: hidden;
    }
    .imgwrap{
      margin: 10px 0;max-height:165px;overflow: hidden;background:#eee;
      .cover{display: block; width:100%;}
    }
  }
  a:hover{color:#666;}
}
/* m-tw-0 单图文 */
.m-tw-0{
  padding-bottom:0px;
}
.m-tw-0-edit{
    .imgwrap{height:165px;}
}
/* 多图文 */
.m-tw-1{
  .imgwrap{position: relative;}
  .title{
    position: absolute;left: 0;bottom: 0;right:0;padding: 4px 0;background-color: rgba(0, 0, 0);background-color: rgba(0, 0, 0, 0.6);filter:alpha(opacity=60)\9;
    a, span{display: block;padding: 0 5px;color: #fff;font-weight: normal;}
    &:hover{background-color: rgba(0, 0, 0);background-color: rgba(0, 0, 0, 0.45);filter:alpha(opacity=45)\9;text-decoration: none;};
  }
  .atlt{display: block;max-height:52px;overflow: hidden;word-wrap:break-word;word-break: break-all;}
  .item{
    padding: 10px 0;border-top: 1px solid #ddd;
    p{
      margin-left:70px;height:55px;overflow: hidden;font-size: 18px;
      a{
        &:hover{color:#666;}
      }
    }
    .atlt{font-size: 12px;line-height: 22px;max-height: 44px;}
  }
  .thumb{float:left;width:48px;height:48px;background:#eee;}
}
/* 多图文-编辑状态 */
.m-tw-1-edit{
  border:0;border-radius:0;background:none;
  ul{display:none;position: absolute;left: 0;top: 0;width: 100%;height: 100%;background:#4993c3;background:rgba($bg3,0.85);}
  li{
    position:relative;float: left;width: 50%;height: 100%;
    a{
        display: block;width:100%;height:100%;margin:0;
        &:hover{background:$bg3;background:rgba($bg3,0.85);}
    }
    .u-icn{position:absolute;top:50%;left:50%;margin:-14px;}
  }
  .cnt{position:relative;border: 1px solid $bd0;border-bottom-width:3px;border-radius:5px;padding-bottom:10px;background:#fff;}
  .imgwrap{
      height:165px;
    &:hover ul{display: block;}
    li{
      width: 100%;
    }
    .title{padding:4px 5px;color:#fff;font-weight: normal;}
  }
  .item{
    position: relative;
    &:hover ul{display: block;}
  }
  .add{
    margin-top:-3px;border:2px dotted $bd0;border-top:0;border-radius:0 0 5px 5px;background:#fff;
    a{display:block;line-height: 70px;text-align: center;font-size:$fs3;}
    .u-icn{margin:-2px 15px 0 0;}
  }
}
/* 活动 */
.m-act{
  font-size: $fs0;background:#fff;outline: 1px solid $bd0;
  .cnt{
    padding: 15px;max-width: 290px;position: relative;z-index: 100;
    .z-sel{display: none;}
  }
  .time{font-size: 12px;color:$fc1;}
  .detail{
    margin: 10px 0 20px;
    img{float: left;margin-right:15px;width: 120px;height: 120px;border:1px solid $bd0;background-color:$bg5;}
  }
  .subtitle{
    display: block;line-height: 24px;font-size:16px;color:#222;$break-word();margin-left: 135px;max-height: 48px;overflow: hidden;
    a{color:#222;}
    a:hover{color:#666;}
  }
  .interval{margin-top: 10px;color: #666;font-size:12px;margin-left: 135px;}
  .mask{display: none;}
  .u-operate{display: none;}
}
/* 活动编辑 */
.m-act-edit{
    margin:0;
}
/* 投票 */
.m-vote{
  border: 1px solid $bd0;font-size: $fs0;background:#fff;
  .cnt{
    padding: 15px 20px;width: 297px;position: relative;z-index: 100;
    .z-sel{display: none;}
  }
  .time{font-size: 12px;color:$fc1;}
  .detail{
    margin: 10px 0 20px;
    img{float: left;margin-right:15px;width: 120px;height: 120px;border:1px solid $bd0;background-color:$bg5;}
  }
  .title{
    display: block;line-height: 24px;font-size:16px;color:#222;$break-word();margin-left: 137px;
    a{color:#222;}
    a:hover{color:#666;}
  }
  .interval{margin-top: 10px;color: #666;font-size:12px;margin-left: 137px;}
  .mask{display: none;}
  .u-operate{display: none;}
}
/* 发码 */
.m-famaitm{
  border: 1px solid $bd0;font-size: $fs0;background:#fff;
  .cnt{
    padding: 15px 20px;width: 297px;position: relative;z-index: 100;
    .z-sel{display: none;}
  }
  .time{font-size: 12px;color:$fc1;}
  .detail{
    margin: 10px 0 20px;
  }
  .subtitle{
    display: block;line-height: 24px;height: 48px;font-size:16px;color:#222;$break-word();
    a{color:#222;}
    a:hover{color:#666;}
  }
  .interval{margin-top: 10px;color: #666;font-size:12px;}
  .mask{display: none;}
  .u-operate{display: none;}
}
/* 微访谈 */
.m-interview{
  border: 1px solid $bd0;font-size: $fs0;background:#fff;
  .cnt{
    padding: 15px 20px;width: 297px;position: relative;z-index: 100;
    .z-sel{display: none;}
  }
  .time{font-size: 12px;color:$fc1;}
  .detail{
    margin: 10px 0 20px;
    img{float: left;margin-right:15px;width: 120px;height: 120px;border:1px solid $bd0;background-color:$bg5;}
  }
  .title{
    display: block;line-height: 24px;font-size:16px;color:#222;$break-word();margin-left: 137px;
    a{color:#222;}
    a:hover{color:#666;}
  }
  .interval{margin-top: 10px;color: #666;font-size:12px;margin-left: 137px;}
  .mask{display: none;}
  .u-operate{display: none;}
}

.m-tw,.m-act,.m-vote,.m-interview,.m-famaitm{
  .cnt{position: relative;}
  .mid{
    position: absolute;
    right: 20px;
    top: -10px;
    padding: 2px 5px;
    line-height: 18px;
    font-size: 12px;
    color: #999;
    background: #fff;
    .u-ticon{cursor: pointer;color:$bluelink;}
  }
}

/* 表情控件触发器（带文本计数） */
.m-emtrig{
  $clearfix();
  .emotwrap,.count{float:left;}
  .count{padding-left:15px;color:#999;line-height:32px;font-family:simsun;font-size:12px;}
  .u-ticon{font-size:28px;color:#ccc;cursor:pointer;}
}

/* 消息发送模块  */
.m-msgbox{
  position:relative;border:1px solid #ddd;border-radius:4px;
  .replybox{display: none;} 
  .box{
    .u-mtxt{padding:20px;}
    .mediaarea{
      display:none;width:100%;min-height:350px;padding:10px;$box-sizing:border-box;background:#fff;
      .m-act,.m-famaitm,.m-vote,.m-interview{width: 337px;}
      .tw-wrap{
        width: 339px;
        .imgwrap{width:300px;}
      }
      .u-ticon{display: none;}
    } 
  }
  .m-emtrig{
    position:absolute;bottom:15px;left:20px;
  }
  .opt,.opt1{
    padding:15px 0;margin:0 20px; text-align:right;border-top:1px solid #ddd;
    .u-btn{margin-left:10px;}
  }
  .opt1{display:none;} 
  .u-expression{padding-left:15px;color:#2e7dc6;} 
