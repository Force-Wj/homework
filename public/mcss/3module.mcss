.m-uparea{
  $clearfix();
  .tip{
    color: #999;
    float: left;
    margin-left:10px;
    font-family:  arial,"simsun";
  }
  .close{
    display: none;
    position: absolute;
    top:-10px;
    right: 0px;
    font-weight: bold;
    font-family: arial;
    font-size: 16px;
    line-height: 32px;
    color: #bbb;
    text-shadow: 0 1px #fff;
    cursor: pointer;
    &:hover{
      color: #999;
    }
  }
  .close.bounceIn{
    display: block;
  }
  &-mult{
    .tip{
      display: block;
    }
  }
  &.z-end{
    .progress{
      .warn{
        color: #666;
      }
    }
  }
  margin-bottom: 20px;
  border:1px solid #ddd;
  .progress-wrap{
    overflow: hidden;
  }

  .topbar{
    @extend .m-upload;
    z-index: 10;
    border:none;
    margin:0;
  }
  .progress{
    position: relative; /*设置为relative即可*/
    padding: 0px 15px;
    background-color: #fff;
    height: 0px;
    opacity: 0;
    overflow: hidden;

    $transition: height .3s cubic-bezier(0.770, 0.000, 0.175, 1.000);
    .topmsg{
      $clearfix();
      position: relative;
      margin-bottom: 12px;
    }
    .text{
      $txt-ellipsis();
      position: absolute;
      right: 20px;
      max-width: 400px;
      line-height: 20px;
      top:-2px;
      color: #999;
    }
    .warn{
      color: s-adjust(red, -10%);
    }
    .btmsg{
      .u-ticon{
        color: #7cafdb;
        margin-left: 2px;
      }
      .info{
        $display: inline-block;
        margin-right: 10px;
        position: relative;
      }
      margin-top: 12px;
      .num{
        color: #de7005;
        margin-left: 2px;
        margin-right: 2px;

      }
      .info-success{
        .num{
          color: #00b589;
        }
      }
    }
  }
  .progress.z-show{
    opacity: 1;
    height: 90px;
    padding-top: 15px;
  }
}
.m-progress{
  height: 10px;
  display: block;
  .progress-inner-element{
    $size: 100%;
  }
  .progress-bar{
    background-color: #f5f5f5;
    $box-shadow: inset 0px 1px 1px #ccc;
    $size: 100%;
    overflow: hidden;
    border-radius: 3px;
  }
  .progress-value{
    $clearfix();
    position: relative;
    overflow: hidden;
    .mask{
      position: absolute;
      width: 100%;
      height: 100%;
      top:0px;
      display: block;
      left: 0px;
      z-index: 1;
      background-color: transparent;
      background-image: -webkit-linear-gradient(45deg, rgba(255,255,255,0.15) 25%, transparent 25%, transparent 50%, rgba(255,255,255,0.15) 50%, rgba(255,255,255,0.15) 75%, transparent 75%, transparent);
      background-image: linear-gradient(45deg, rgba(255,255,255,0.15) 25%, transparent 25%, transparent 50%, rgba(255,255,255,0.15) 50%, rgba(255,255,255,0.15) 75%, transparent 75%, transparent);
      $animation: progress 2s linear infinite;
      background-size: 30px 30px;
    }
    .success, .error{
      float: left;
      $display: inline-block;
      padding: 0;
      margin:0;
      height: 100%;
    }
    .success{
      // $transition: background-color .4s;
      background-color: #2980b9;
      width: 100%;
    }
    .error{
      width: 0%;
      background-color: #c0392b;
    }
    overflow:hidden;
    height: 100%;
    width: 20%;
    $box-sizing: border-box;
    // $transition: width .4s cubic-bezier(0.770, 0.000, 0.175, 1.000);
  }
  &.z-dis{
    .progress-value{
      // $transition: none;
      .mask{
        $animation: none;
      }
      .success{
        background-color: #aaa;
      }
    }
  }
}
