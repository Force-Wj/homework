  bottom: 0px;
  $clearfix();
  .u-menu:hover > .close, .m-menu .close:hover{
    display: block;
  }
  .u-menu li:hover > .close{
    display: block;
  }
  .drag .close, .drag .close:hover{
    display: none !important;
  } 
  .close{
    display: none;
    position: absolute;
    font-weight: bold;
    cursor: pointer;
    right: 1px;
    top:1px;
    width:12px;height:12px;line-height:12px;
    text-align: center;font-size:10px;
    color:#fff;background-color:#aaa;
    &:hover{
      background-color:#df1900;
    }
  }
  > .u-menu{
    float: left;
    margin-top:-1px;
    margin-left:-1px;
    width: 90%;
    &:first-child{margin-left: 1px; }
  }
  &-2 > .u-menu{width: 45%; }
  &-3 > .u-menu{width: 30%; }
  &-4 > .u-menu{width: 25%; }
  > .u-menu-2{width: 10%; }
  .u-drag{
    $opacity: .3;
    position: absolute;
    z-index: 1000;
    background: #ccc;
    left:0;
    a{cursor: move; }
  }
  li.z-current > a{
    $transition: background-color .3s ;
    background-color:#71b8f1;
    color:#fff;
  }
} 



